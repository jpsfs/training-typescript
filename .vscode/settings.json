// Place your settings in this file to overwrite default and user settings.
{
    // Configure glob patterns for excluding files and folders. 
	"files.exclude": {
		"**/.git": true,
		"**/.DS_Store": true,
        "**/node_modules/": true,
        "**/*.js": { "when": "$(basename).ts"},
        "**/*.css": { "when": "$(basename).less"},
        "**/*.min.css": true,
        "**/*.js.map": true,
        "**/*.d.ts": { "when": "$(basename).ts"}
	},
    "editor.wordWrap": "on"
}